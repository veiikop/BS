<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Логотип вверху, как в login/register -->
        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="wrap_content"
            android:layout_height="265dp"
            android:layout_gravity="center"
            android:contentDescription="Логотип салона"
            android:src="@drawable/logo" />

        <!-- Заголовок -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Подтверждение записи"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Детали записи -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Детали записи:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/text_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Услуга:"
            android:textSize="16sp"
            android:textColor="@color/colorText"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/text_master"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Мастер:"
            android:textSize="16sp"
            android:textColor="@color/colorText"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/text_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дата и время:"
            android:textSize="16sp"
            android:textColor="@color/colorText"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/text_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Цена:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:layout_marginBottom="32dp" />

        <!-- ProgressBar для отображения загрузки -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Кнопка подтверждения -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_confirm_booking"
            style="@style/CustomButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Подтвердить запись"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="16dp" />

        <!-- Кнопка назад -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_back"
            style="@style/CustomButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назад"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="16dp" />

        <!-- Кнопка "Вернуться в каталог" -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_cancel"
            style="@style/CustomButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вернуться в каталог"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorError" />

    </LinearLayout>
</ScrollView>